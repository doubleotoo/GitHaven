#!/bin/sh -e
name=$1
if [ -z "${name}" ] ; then
    echo "Error: name not specified" >&2
    exit 1
fi
table="repositories"
dbfile=`githaven-db`
id=`sqlite3 "${dbfile}" "select id,name from ${table}" | grep "${name}$" | sed -e s/\|"${name}$"//g`
if [ -z "$id" ] ; then
    echo "Unknown repository: $name" >&2
    exit 1
fi
echo $id
