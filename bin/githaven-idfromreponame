#!/bin/sh -e
name="${1}"
if [ -z "${name}" ] ; then
    echo "Error: name not specified" >&2
    exit 1
fi
user_id="${2}"
if [ -z "${user_id}" ] ; then
    echo "Error: user_id not specified" >&2
    exit 1
fi

table="repositories"
dbfile=`githaven-db`
id=`sqlite3 "${dbfile}" "select id,user_id,name from ${table}" | grep "${name}$" | grep "${user_id}" | sed -e s/\|"${user_id}"\|"${name}$"//g`
if [ -z "$id" ] ; then
    echo "Unknown repository: $name" >&2
    exit 1
fi
echo $id
