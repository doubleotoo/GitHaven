<h1>Editing repository</h1>

<%= link_to 'Show', @repository %>

<% form_for(@repository) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :defaultbranch %><br />
    <%= f.text_field :defaultbranch %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= button_to 'Delete Repository', @repository, :confirm => 'Are you sure?', :method => :delete  %>
