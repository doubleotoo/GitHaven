<%= page_heading t('user.preferences') %>
<h1><%= t('user.preferences') %></h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :avatar %><br />
    <%= f.text_field :avatar %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%=
@sshkeys = @user.sshkeys
render(:partial => 'sshkeys/show')
%>

<hr>
<p>
<%= button_to 'Delete my Account', @user, :confirm => 'Are you sure?', :method => :delete  %>
</p>
