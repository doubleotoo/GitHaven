<%= page_heading h @user.username + ' ' + t('user.preferences') %>
<h1><%= h @user.username + ' ' + t('user.preferences') %></h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :avatar %><br />
    <%= f.text_field :avatar %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%=
@sshkeys = @user.sshkeys
render(:partial => 'sshkeys/show')
%>

<div id="delete_button">
<%= button_to 'Delete my Account', @user, :confirm => 'Are you sure?  All your repositories will be deleted also.', :method => :delete  %>
</div>
