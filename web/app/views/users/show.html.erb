<%= page_heading @user.username %>
<div id="user">
<%= image_tag @user.gravatar_url(:size => 48) %>
<h1><%=h @user.username %></h1>

<% if @user.name %>(<%=h @user.name %>)<% end %>

<% if @user.name %>Name: <%=h @user.name %><br /><% end %>
<% if @user.email %>Email: <%=h @user.email %><br /><% end %>
<% if @user.url %>Website: <%=h @user.url %><br /><% end %>
</div>


<h2>Repositories:</h2>
<ul id="repositories">
<% for repo in @user.repositories %>
    <li><%=link_to h(repo.name), :controller => "repositories", :action => "show", :repo => repo.name %>
    <% if !repo.description.empty? %>
    :: <%= repo.description %>
    <% end %>
    </li>
<% end %>
</ul>
<% if session[:user_id] %>
<%= button_to "Create New Repository", {:controller => 'repositories', :action => 'new'}, :method => :get %>
<% end %>
