<p>
  <b>Username:</b>
  <%=h @user.username %>
</p>

<p>
  <b>Name:</b>
  <%=h @user.name %>
</p>

<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
  <b>Url:</b>
  <%=h @user.url %>
</p>

<p>
  <b>Avatar:</b>
  <%=h @user.avatar %>
</p>

<h2>Repositories:</h2>
<ul id="repositories">
<% for repo in @user.repositories %>
    <li><%=link_to h(repo.name), :controller => "repositories", :action => "show", :repo => repo.name %></li>
<% end %>
</ul>

