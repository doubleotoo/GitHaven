<%= page_heading "users" %>
<h1>Users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Email</th>
    <th>Url</th>
    <th>Avatar</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%=h user.url %></td>
    <td><%=h user.avatar %></td>
    <td><%= link_to 'Show', user %></td>
<% if @loggedinuser and GitHavenConfig["root_user"] == @loggedinuser.username and user.username != I18n.t('user.all') -%>
    <td><%= link_to 'Delete', user, :method => :delete  %></td>
<% end -%>
  </tr>
<% end %>
</table>
