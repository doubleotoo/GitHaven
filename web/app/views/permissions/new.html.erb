<%= page_heading "New permission" %>
<h1>New permissions for <%= link_to h(@repository.name), edit_repository_path(@repository) %></h1>

<% form_for(@permission) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field(:repository_id) %>
  User:
  <%= f.select :user_id,
    @users.map {|u| [u.username, u.id]},
        :prompt => "Select a user" %>
  <%= f.label :mode, "Type:" %>
  <%= f.select :mode,
      Permission::MODES,
      :prompt => "Select Permissions:" %>

  <p>
    <%= f.submit "Add" %>
  </p>
<% end %>
